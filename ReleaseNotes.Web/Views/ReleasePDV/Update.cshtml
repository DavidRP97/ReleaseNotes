@model ReleasePDVViewModel

@if (User.IsInRole(@Role.SuperControleAdmin))
{
    <form asp-action="Update">
        <input asp-for="ReleaseId" hidden>
        <br />
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h3 class="text-center title-2">Editar Versão</h3>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <label for="company" class=" form-control-label">Número da Versão</label>
                                    <input asp-for="VersionNumber" class="form-control" />
                                    <span asp-validation-for="VersionNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label for="company" class=" form-control-label">Data Lançamento da Versão</label>
                                    <input asp-for="VersionDate" class="form-control" />
                                    <span asp-validation-for="VersionDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-sm">
                            <i class="fa fa-dot-circle-o"></i> Salvar
                        </button>
                        <a asp-action="IndexControlPainel" asp-controller="ReleasePDV" class="btn btn-warning btn-sm">Voltar</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
}
else
{
    <partial name="_Credential" />
}
