@model ReleaseNotes.Service.Models.PDV.ReleasePDVViewModel

@{
    ViewData["Title"] = "Exclusão de Versão";
}

<h3>Deseja realmente excluir a versão:</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Número Versão: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VersionNumber)
        </dd>   
        <dt class = "col-sm-2">
            Data Versão: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VersionDate)
        </dd> 
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ReleaseId" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index" asp-controller="ReleasePDV" class="btn btn-warning">Voltar</a>
    </form>
</div>
