@model FeedbackViewModel

@{
    string De = Model.FeedbackFrom == FeedbackFrom.PDV ? "PDV" : "PowerServer";
    ViewData["Title"] = "Excluir Feedback";
}

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Data:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt class="col-sm-2">
            Software:
        </dt>
        <dd class="col-sm-10">
            @De
        </dd>
        <dt class="col-sm-2">
            Detalhes do Feedback:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Details)
        </dd>
    </dl>
    <form asp-action="DeleteFeedback">
        <input type="hidden" asp-for="FeedbackId" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index" asp-controller="Feedback" class="btn btn-warning">Voltar</a>
    </form>
</div>