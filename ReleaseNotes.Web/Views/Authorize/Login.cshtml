@model ReleaseNotes.Web.ViewModel.LoginViewModel

<div class="page-wrapper">
    <div class="page-content--bge5">
        <div class="container">
            <div class="login-wrap">
                <div class="login-content">                   
                    <div class="login-form">
                        <form asp-action="Login">
                            <div class="form-group">
                                <label>Email</label>
                                <input asp-for="Email" class="au-input au-input--full" type="email" name="email" placeholder="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Senha</label>
                                <input asp-for="Password" class="au-input au-input--full" type="password" name="password" placeholder="Senha">
                                <span asp-validation-for="Password" class="text-danger"></span>

                            </div>
                            <div class="login-checkbox">
                                <label>
                                    <input asp-for="Remember" type="checkbox" name="remember">Matenha conectado
                                </label>
                                <label>
                                    <a href="#">Esqueci minha senha!</a>
                                </label>
                            </div>
                            <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">Entrar</button>
                        </form>
                        <div class="register-link">
                            <p>
                                Primeiro acesso?
                                <a asp-action="Register" asp-controller="Authorize">Cadastra-se</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
