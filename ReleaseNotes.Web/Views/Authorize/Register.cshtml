@model ReleaseNotes.Web.ViewModel.RegisterViewModel

<div class="page-wrapper">
    <div class="page-content--bge5">
        <div class="container">
            <div class="login-wrap">
                <div class="login-content">                   
                    <div class="login-form">
                        <form action="" method="post">
                            <div class="form-group">
                                <label>Email</label>
                                <input asp-for="Email" class="au-input au-input--full" type="text" name="Email" placeholder="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Senha</label>
                                <input asp class="au-input au-input--full" type="password" name="password" placeholder="Senha">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Primeiro Nome</label>
                                <input asp-for="FirstName" class="au-input au-input--full" type="text" name="FirstName" placeholder="Nome">
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Sobrenome</label>
                                <input asp-for="LastName" class="au-input au-input--full" type="text" name="LastName" placeholder="Sobrenome">
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">Confirmar</button>                            
                        </form>
                        <div class="register-link">
                            <p>
                                Já possui uma conta?
                                <a asp-action="Login" asp-controller="Authorize">Faça Login!</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>