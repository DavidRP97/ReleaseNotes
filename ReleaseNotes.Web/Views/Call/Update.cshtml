@model CallViewModel

@if (User.IsInRole(@Role.SuperControleAdmin))
{
    <form asp-action="Update">
        <input asp-for="CallId" hidden>
        <br />
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h3 class="text-center title-2">Alterar Status / Prioridade</h3>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="form-group">
                            <select asp-for="Status" asp-items="Html.GetEnumValueSelectList<Status>()" class="form-select">
                                <option selected>Alterar Status</option>
                                <option value="1">Resolvido</option>
                                <option value="2">Em Desenvolvimento</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <select asp-for="PriorityDegree" asp-items="Html.GetEnumValueSelectList<Priority>()" class="form-select">
                                <option selected>Alterar Prioridade</option>
                                <option value="1">Alta</option>
                                <option value="2">Média</option>
                                <option value="3">Baixa</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-sm">
                            <i class="fa fa-dot-circle-o"></i> Salvar
                        </button>
                        <a asp-action="Index" asp-controller="Call" class="btn btn-warning btn-sm">Voltar</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
}
else
{
    <partial name="_Credential" />
}