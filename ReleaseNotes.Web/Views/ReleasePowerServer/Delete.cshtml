@model ReleasePowerServerViewModel

@{
    ViewData["Title"] = "Exclusão de Versão";
}
@if (User.IsInRole(@Role.SuperControleAdmin))
{
    <h3>Deseja realmente excluir a versão:</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Número Versão:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.VersionNumber)
            </dd>
            <dt class="col-sm-2">
                Data Versão:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.VersionDate)
            </dd>
            <dt class="col-sm-2">
                Notas Cadastradas:
            </dt>
            <dd class="col-sm-10">
                @Model.Modules.Count()
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="ReleaseId" />
            <input type="submit" value="Excluir" class="btn btn-danger" /> |
            <a asp-action="IndexControlPainel" asp-controller="ReleasePowerServer" class="btn btn-warning">Voltar</a>
        </form>
    </div>
}

