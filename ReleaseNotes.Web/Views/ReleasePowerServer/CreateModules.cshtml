@model ModulePowerServerViewModel

@{
    ViewData["Title"] = "Criar Novo";
    long Id = Convert.ToInt64(TempData["ID"]);
    long ReleaseId = Convert.ToInt64(TempData["ReleaseId"]);

    long? IdRelease = Id == 0 ? ReleaseId : Id;
}
@if (User.IsInRole(@Role.SuperControleAdmin))
{
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <div class="card-title">
                    <h3 class="text-center title-2">Notas de Versão</h3>
                </div>
                <hr>
                <form asp-action="CreateModules" method="post">
                    <div class="form-group">
                        <label for="disable-input" class=" form-control-label">Release Id</label>
                        <input asp-for="ReleaseId" type="text" id="disable-input" value="@IdRelease" class="form-control">
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label for="ModuleName" class=" form-control-label">Módulo</label>
                                <input asp-for="ModuleName" placeholder="Módulo" class="form-control">
                                <span asp-validation-for="ModuleName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label for="Title" class=" form-control-label">Titulo da Nota</label>
                                <input asp-for="Title" placeholder="Titulo da Nota" class="form-control">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Notes" class=" form-control-label">Descrição da Nota</label>
                            <textarea asp-for="Notes" id="textarea-input" rows="6" placeholder="Descrição..." class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-sm">
                                <i class="zmdi zmdi-plus"></i> Adicionar
                            </button>
                            <a asp-action="IndexControlPainel" asp-controller="ReleasePowerServer" class="btn btn-warning btn-sm">Voltar</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

