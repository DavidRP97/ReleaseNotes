@model ModulePowerServerViewModel

@{
    ViewData["Title"] = "Exclusão de Nota";
}

@if (User.IsInRole(@Role.SuperControleAdmin))
{
    <h3>Deseja realmente excluir a versão:</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Número Versão:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ModuleName)
            </dd>
            <dt class="col-sm-2">
                Data Versão:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                Nota:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Notes)
            </dd>
        </dl>

        <form asp-action="DeleteModule">
            <input type="hidden" asp-for="ModuleId" />
            <input type="submit" value="Excluir" class="btn btn-danger" /> |
            <a asp-action="IndexControlPainel" asp-controller="ReleasePowerServer" class="btn btn-warning">Voltar</a>
        </form>
    </div>
}
else
{
    <partial name="_Credential" />
}